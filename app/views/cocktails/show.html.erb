<div class="container">
  <h1><%= @cocktail.name %></h1>
  <%= link_to '+Add a new dose', new_cocktail_dose_path(@cocktail) %>
  <br>
  <br>

  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li> <%= dose.description %> <%= dose.ingredient.name %>  - <%= link_to 'Destroy', dose, method: :delete %></li>
    <% end %>
  </ul>

<%= link_to 'Back to cocktails list', cocktails_path %>
</div>
